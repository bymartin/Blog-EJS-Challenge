<%- include('partials/header'); -%>

<h1>Home</h1>
<p><%= startingContent %></p>

<% posts.forEach(function(post) { %>
<h2><%= post.title %></h2>
<!-- Truncate content to 100 characters followed by ... -->
<p>
    <%= post.content.substring(0,100) + " ..." %>
    <a href="posts/<%= post._id%>">Read More</a>
</p>
<% }); %> 

<%- include('partials/footer'); -%>

